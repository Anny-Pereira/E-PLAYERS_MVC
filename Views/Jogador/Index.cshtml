@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<section class="banner_cadastro" id="banner">
    <h1>Cadastro de @ViewData["Title"]</h1>
</section>

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID</label>
    <input type="text" name="IdJogador">

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Email</label>
    <input type="text" name="Email">

    <label>Senha</label>
    <input type="password" name="Senha">

    <label>ID Equipe </label>
    <input type="text" name="IdEquipe">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>ID Equipe</th>
    </thead>
    <tbody>
        @foreach (var Jogador in ViewBag.Jogadores)
        {
            <tr>
                <td>@Jogador.IdJogador</td>
                <td>@Jogador.Nome</td>
                <td>@Jogador.Email</td>
                <td>@Jogador.IdEquipe</td>
                <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@Jogador.IdJogador"><i class="fas fa-trash"></i></a></td>
            </tr>
        }
    </tbody>

</table>