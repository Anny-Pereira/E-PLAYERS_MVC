@model Equipe
@{
    ViewData["Title"] = "Equipes";
}


<!DOCTYPE html>
<html lang="pt-br">
    <link rel="stylesheet" href="css/e-players-cadastro-times.css">

<section class="banner_cadastro" id="banner">
    <h1>Cadastro de @ViewData["Title"]</h1>
</section>

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

            <div class="item_cadastro">
                <label >ID</label>
                <input type="text" name="IdEquipe">
            </div>

            <div class="item_cadastro">
                <label>Nome</label>
                <input type="text" name="Nome">
            </div>

            <div class="item_cadastro_emblema">
                <label >Imagem</label>
                <input type="file" name="Imagem">
            </div>

        <button type="submit" class="btn_cadastro_times">Cadastrar</button>
    </div>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach (var Equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@Equipe.IdEquipe</td>
                <td>@Equipe.Nome</td>
                <td><img src="/img/Equipes/@Equipe.Imagem" alt="" width="50px"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@Equipe.IdEquipe"><i
                        class="fas fa-trash"></i></a></td>
                @* <td>@Equipe.Imagem</td> *@
            </tr>
        }
    </tbody>
</table>